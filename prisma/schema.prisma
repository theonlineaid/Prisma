generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String   @map("firstName")
  role    Role?    @default(USER)
  Profile Profile?

  // @@id([email, name]) // Each model must have at most one id criteria. You can't have `@id` and `@@id` at the same time.Prisma
  @@unique([name, role])
  @@index([id, email])
  @@map("users")
}

model Profile {
  id     Int    @id @default(autoincrement())
  bio    String
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])
}
